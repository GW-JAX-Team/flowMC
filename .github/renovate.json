{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "flowMC-dev"
  ],
  "schedule": [
    "before 9am on Monday"
  ],
  "timezone": "Europe/Amsterdam",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on Monday"
    ]
  },
  "pip_requirements": {
    "managerFilePatterns": [
      "(^|/)([\\w-]*)requirements\\.(txt|pip)$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "commitMessagePrefix": "ci:",
      "groupName": "GitHub Actions"
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "commitMessagePrefix": "ci:",
      "groupName": "Pre-commit hooks"
    },
    {
      "matchManagers": [
        "pip_requirements",
        "pep621"
      ],
      "commitMessagePrefix": "deps:",
      "groupName": "Python dependencies"
    },
    {
      "matchDepTypes": [
        "dependency-groups"
      ],
      "commitMessagePrefix": "deps:",
      "groupName": "Python dev dependencies"
    },
    {
      "matchPackageNames": ["python"],
      "enabled": false
    }
  ],
  "rangeStrategy": "widen"
}
